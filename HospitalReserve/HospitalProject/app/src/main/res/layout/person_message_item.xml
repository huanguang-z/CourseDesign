<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5" >

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="安卓开发"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#4592B5"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/mtvTotaMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="职位工资:  6000"
                android:textColor="#ff0000"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/mtvaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="工作地点:  202020"
                android:textColor="@color/setting_default_color"
                android:textSize="@dimen/dp_14" />
            
            <TextView
                android:id="@+id/mtvMesssage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="自我介绍:  202020"
                android:textColor="@color/setting_default_color"
                android:textSize="@dimen/dp_14" />
            
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>